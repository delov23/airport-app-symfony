{% extends 'base.html.twig' %}

{% block body_id 'login' %}

{% block main %}
    <main>
        <section class="form-wrapper" data-aos="fade-down">
            <form id="form" name="authenticate" class="form-horizontal" action="{{ path('security_login') }}"
                  method="post">
                <div class="form" id="animate">
                    <div class="form-header">
                        <a class="a-form-section" href="{{ path('security_login') }}">
                            <h3 class="text-center">SIGN IN</h3>
                        </a>
                        <a class="form-section" href="{{ path('user_register') }}">
                            <h3 class="text-center">SIGN UP</h3>
                        </a>
                    </div>
                    <div class="form-content">
                        <h1 class="form-text text-center">Welcome back!</h1>
                        <div class="form-group">
                            <input type="email"
                                   id="user_email"
                                   placeholder="Email"
                                   name="_username">
                        </div>
                        <div class="form-group">
                            <input type="password"
                                   id="password"
                                   placeholder="Password"
                                   name="_password">
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-fill">Sign in</button>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </main>
{% endblock %}