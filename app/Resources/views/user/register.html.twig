{% extends 'base.html.twig' %}

{% block title %}Sign up{% endblock %}

{% block main %}
    <main>
        <section class="form-wrapper" data-aos="fade-down">
            <form id="form" action="{{ path('user_register') }}" method="post" enctype="multipart/form-data">
                <div class="form" id="animate">
                    <div class="form-header">
                        <a class="form-section" href="{{ path('security_login') }}">
                            <h3 class="text-center">SIGN IN</h3>
                        </a>
                        <a class="a-form-section" href="{{ path('user_register') }}">
                            <h3 class="text-center">SIGN UP</h3>
                        </a>
                    </div>
                    <div class="form-content">
                        <h1 class="form-text text-center">Welcome on board!</h1>
                        <div class="form-group text-center">
                            <label class="file-input" for="input-img">+</label>
                            <p class="file-description">Upload a profile picture</p>
                            <input type="file" accept="image/*" id="input-img" style="display: none;" placeholder="Profile Picture" name="user[image][file]" />
                            <p class="error-msg">{% if errors.image is defined %}{{ errors.image|join('. ') }}{% endif %}</p>
                        </div>
                        <div class="form-group-2">
                            <input class="small" type="text" placeholder="Title" name="user[title]" value="{{ user.title }}" />
                            <input class="large" type="text" placeholder="Name" name="user[fullName]" value="{{ user.fullName }}" />
                        </div>
                        <p class="error-msg">{% if errors.title is defined %}{{ errors.title|join('. ') }}{% endif %}</p>
                        <p class="error-msg">{% if errors.fullName is defined %}{{ errors.fullName|join('. ') }}{% endif %}</p>

                        <div class="form-group">
                            <input type="text" placeholder="Email" name="user[email]" value="{{ user.email }}" />
                            <p class="error-msg">{% if errors.email is defined %}{{ errors.email|join('. ') }}{% endif %}</p>
                        </div>

                        <div class="form-group">
                            <input type="password" placeholder="Password" name="user[password][first]"/>
                            <p class="error-msg">{% if errors.first is defined %}{{ errors.first|join('. ') }}{% endif %}</p>
                        </div>

                        <div class="form-group">
                            <input type="password" placeholder="Repeat Password" name="user[password][second]"/>
                            <p class="error-msg">{% if errors.second is defined %}{{ errors.second|join('. ') }}{% endif %}</p>
                        </div>

                        {{ form_row(form._token) }}

                        <div class="form-group text-center">
                            <button id="test-btn" type="submit" class="btn-fill">Sign up</button>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </main>
{% endblock %}